@model Bloggie.Web.Models.Domain.Tag

@if (Model is not null)
{
    <form method="post">
        <div class="mt-3">

            <label class="form-lable">ID</label>
            <input type="text" class="form-control" asp-for="Id" readonly />

            <div class="mt-3">
                <label class="form-lable">Name</label>
                <input type="text" class="form-control" asp-for="Name" />
            </div>

            <div class="mt-3">
                <label class="form-lable">Display Name</label>
                <input type="text" class="form-control" asp-for="DisplayName" />
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="submit" class="btn btn-primary" asp-controller="AdminTags" asp-action="Delete">Delete</button>
            </div>

        </div>
    </form>
}
else
{
    <p>NOT STUDENT WAS FOUND IN THIS ID</p>
}